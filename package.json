{
  "name": "Goobox",
  "version": "0.0.2",
  "description": "Goobox community edition sync app for sia and storj ðŸŽ‰ðŸš€",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "start:installer": "electron . installer",
    "build": "webpack",
    "watch": "webpack -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "dist": "run-s dist:pre dist:package dist:post",
    "dist:pre": "rm -rf dist",
    "dist:package": "electron-packager . goobox --platform=darwin,win32 --arch=x64 --electron-version=1.7.10 --icon=resources/goobox --out=dist --ignore=/jre --ignore=goobox-sync --ignore=.idea --ignore=__mocks__ --ignore=__tests__",
    "dist:post": "run-p dist:post:*",
    "dist:post:mac": "mkdir -p dist/goobox-darwin-x64/goobox.app/Contents/Resources/app/goobox-sync-sia && curl -sSL https://github.com/GooBox/goobox-sync-sia/releases/download/v0.0.14/goobox-sync-sia-0.0.14-mac.tar.gz | tar -zxv -C dist/goobox-darwin-x64/goobox.app/Contents/Resources/app/goobox-sync-sia --strip-components 1",
    "dist:post:win": "mkdir -p dist/goobox-win32-x64/resources/goobox-sync-sia && curl -sSL https://github.com/GooBox/goobox-sync-sia/releases/download/v0.0.14/goobox-sync-sia-0.0.14-win64.tar.gz | tar -zxv -C dist/goobox-win32-x64/resources/goobox-sync-sia --strip-components 1",
    "check-update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/GooBox/goobox-community-gui.git"
  },
  "author": "Junpei Kawamoto <kawamoto.junpei@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GooBox/goobox-community-gui/issues"
  },
  "homepage": "https://github.com/GooBox/goobox-community-gui",
  "dependencies": {
    "about-window": "^1.8.0",
    "electron-json-storage": "^4.0.2",
    "node-jre": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-react": "^7.0.0-beta.36",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.0.4",
    "babel-loader": "^8.0.0-beta.0",
    "electron": "1.7.10",
    "electron-log": "^2.2.13",
    "electron-packager": "^10.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^22.0.4",
    "js-yaml": "^3.10.0",
    "menubar": "^5.2.3",
    "npm-check-updates": "^2.14.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "semver": "^5.4.1",
    "webpack": "^3.10.0"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current",
            "electron": "1.7.10"
          },
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-react"
    ]
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./setupTests.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
