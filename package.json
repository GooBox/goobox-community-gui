{
  "name": "Goobox",
  "version": "0.0.5",
  "description": "Goobox community edition sync app for sia and storj ðŸŽ‰ðŸš€",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "start:installer": "electron . installer",
    "build": "webpack",
    "build:watch": "webpack -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm test -- --coverage",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "dist": "run-s dist:pre dist:package dist:post",
    "dist:pre": "rm -rf dist",
    "dist:package": "electron-packager . goobox --platform=darwin,win32 --arch=x64 --electron-version=1.7.10 --icon=resources/goobox --out=dist --ignore=/jre --ignore=goobox-sync --ignore=.idea --ignore=__mocks__ --ignore=__tests__ --ignore=coverage",
    "dist:post": "run-p dist:sia:* dist:storj:*",
    "dist:storj:win": "mkdir -p dist/goobox-win32-x64/resources/app/goobox-sync-storj && curl -sSL https://github.com/GooBox/goobox-sync-storj/releases/download/0.0.14/goobox-sync-storj-0.0.14-win64.zip -o tmp.zip && unzip tmp.zip -d dist/goobox-win32-x64/resources/app/ && rm tmp.zip",
    "dist:sia:mac": "mkdir -p dist/goobox-darwin-x64/goobox.app/Contents/Resources/app/goobox-sync-sia && curl -sSL https://github.com/GooBox/goobox-sync-sia/releases/download/v0.0.15/goobox-sync-sia-0.0.15-mac.tar.gz | tar -zxv -C dist/goobox-darwin-x64/goobox.app/Contents/Resources/app/goobox-sync-sia --strip-components 1",
    "dist:sia:win": "mkdir -p dist/goobox-win32-x64/resources/app/goobox-sync-sia && curl -sSL https://github.com/GooBox/goobox-sync-sia/releases/download/v0.0.15/goobox-sync-sia-0.0.15-win64.tar.gz | tar -zxv -C dist/goobox-win32-x64/resources/app/goobox-sync-sia --strip-components 1",
    "check-update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/GooBox/goobox-community-gui.git"
  },
  "author": "Junpei Kawamoto <kawamoto.junpei@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GooBox/goobox-community-gui/issues"
  },
  "homepage": "https://github.com/GooBox/goobox-community-gui",
  "dependencies": {
    "about-window": "^1.8.0",
    "del": "^3.0.0",
    "electron-json-storage": "^4.0.2",
    "node-jre": "jkawamoto/node-jre#fix-8"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.37",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-react": "^7.0.0-beta.37",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.0.6",
    "babel-loader": "^8.0.0-beta.0",
    "classnames": "^2.2.5",
    "coveralls": "^3.0.0",
    "electron": "1.7.10",
    "electron-log": "^2.2.14",
    "electron-packager": "^10.1.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "history": "^4.7.2",
    "jest": "^22.0.6",
    "js-yaml": "^3.10.0",
    "menubar": "^5.2.3",
    "npm-check-updates": "^2.14.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.4.0",
    "redux-saga": "^0.16.0",
    "semver": "^5.4.1",
    "stream-to-string": "^1.1.0",
    "svg-url-loader": "^2.3.1",
    "webpack": "^3.10.0"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current",
            "electron": "1.7.10"
          },
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./setupTests.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
